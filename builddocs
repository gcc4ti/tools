#!/bin/sh
# =======================================================
#
# catches the usage information of all tools which is
# printed on USAGE_OUT into file tooldocs.txt
#
# =======================================================
echo "#############################################################################" > tooldocs.txt
echo "SHORT USAGE INFORMATION of included PCTOOLS                                  " >> tooldocs.txt
echo "-----------------------------------------------------------------------------" >> tooldocs.txt
echo "NOTE: tooldocs.txt will be automatically generated by calling each tool      " >> tooldocs.txt
echo "      without any commandline parameter.                                     " >> tooldocs.txt
echo "      Don't modify this document by hand. You will loose your changes        " >> tooldocs.txt
echo "      when builddocs(.bat) will be run again                                 " >> tooldocs.txt
echo "#############################################################################" >> tooldocs.txt
bin/ttarchive >> tooldocs.txt
echo "-----------------------------------------------------------------------------" >> tooldocs.txt
bin/ttbin2str >> tooldocs.txt
echo "-----------------------------------------------------------------------------" >> tooldocs.txt
bin/ttbin2hex >> tooldocs.txt
echo "-----------------------------------------------------------------------------" >> tooldocs.txt
bin/ttbin2oth >> tooldocs.txt
echo "-----------------------------------------------------------------------------" >> tooldocs.txt
bin/ttbin2bin >> tooldocs.txt
echo "-----------------------------------------------------------------------------" >> tooldocs.txt
bin/ttbin2txt >> tooldocs.txt
echo "-----------------------------------------------------------------------------" >> tooldocs.txt
bin/ttchecksum >> tooldocs.txt
echo "-----------------------------------------------------------------------------" >> tooldocs.txt
bin/ttdos2ebk >> tooldocs.txt
echo "-----------------------------------------------------------------------------" >> tooldocs.txt
bin/ttebkgen >> tooldocs.txt
echo "-----------------------------------------------------------------------------" >> tooldocs.txt
bin/ttextract >> tooldocs.txt
echo "-----------------------------------------------------------------------------" >> tooldocs.txt
bin/ttinfo >> tooldocs.txt
echo "-----------------------------------------------------------------------------" >> tooldocs.txt
bin/ttpack >> tooldocs.txt
echo "-----------------------------------------------------------------------------" >> tooldocs.txt
bin/ttppggen >> tooldocs.txt
echo "-----------------------------------------------------------------------------" >> tooldocs.txt
bin/ttsetname >> tooldocs.txt
echo "-----------------------------------------------------------------------------" >> tooldocs.txt
bin/ttsplit >> tooldocs.txt
echo "-----------------------------------------------------------------------------" >> tooldocs.txt
bin/ttstrip >> tooldocs.txt
echo "-----------------------------------------------------------------------------" >> tooldocs.txt
bin/tttiler >> tooldocs.txt
echo "-----------------------------------------------------------------------------" >> tooldocs.txt
bin/ttunarchive >> tooldocs.txt
echo "-----------------------------------------------------------------------------" >> tooldocs.txt
bin/ttunebk >> tooldocs.txt
echo "-----------------------------------------------------------------------------" >> tooldocs.txt
bin/ttunpack >> tooldocs.txt
echo "-----------------------------------------------------------------------------" >> tooldocs.txt

echo tooldocs.txt generated.
